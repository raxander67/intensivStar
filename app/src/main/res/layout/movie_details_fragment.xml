                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="Название" />

            <TextView
                android:id="@+id/overview_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/material_margin_small"
